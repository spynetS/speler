package com.example.scripting;

import java.util.Map;

import com.example.ECS;
import com.example.ECS.Component;

public class Entity {

		public int id;
		ECS ecs;

		public Entity(ECS ecs){
				this.ecs = ecs;
		}
		
		public <T> T getComponent(Class<T> componentClass) {
				Map<Class<?>, Component> entityComponents = ecs.components.get(this.id);
				if (entityComponents == null)
						return null;

				Component comp = entityComponents.get(componentClass);
				if (componentClass.isInstance(comp))
						return componentClass.cast(comp);
				else
						return null;
		}



}
